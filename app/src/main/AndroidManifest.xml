<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.example.renat.tetris">

    <application android:allowBackup="true" android:label="@string/app_name" android:icon="@mipmap/icontetris" android:theme="@style/AppTheme"
        android:hardwareAccelerated="false">

        <activity android:name=".Main" android:label="Tetrizz"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Game_Activity"
            android:parentActivityName="com.example.renat.tetris.Main"
            android:screenOrientation="portrait">
        </activity>


        <activity android:name=".Popup_Window"
            android:theme="@style/AppTheme.Transparent"
            android:screenOrientation="portrait"

            />

        <activity android:name=".OptionMenu"
            android:screenOrientation="portrait"
            />


        <activity android:name=".ClassicMenu"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            />

        <activity android:name=".SelectSizeMenu"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            />


        <activity android:name=".LevelMenu"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
